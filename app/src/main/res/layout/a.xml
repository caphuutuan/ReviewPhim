                <!--                        android:text="Đăng nhập bằng Google"-->
                <!--                        app:backgroundTint="#FF2B2B" />-->

                <!--                    <Button-->
                <!--                        android:id="@+id/btn_login_fb"-->
                <!--                        android:layout_width="match_parent"-->
                <!--                        android:layout_height="40dp"-->
                <!--                        android:layout_marginStart="70dp"-->

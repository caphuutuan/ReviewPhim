<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F7FB"
    tools:context=".profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F3F3F4"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_member"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="THÀNH VIÊN"
            android:textColor="#FF595858"
            android:background="@drawable/underline"
            android:textSize="16sp" />


        <!--        <ImageView-->
        <!--            android:id="@+id/img_avt"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="108dp"-->
        <!--            android:layout_marginTop="10dp"-->
        <!--            android:layout_marginBottom="10dp"-->
        <!--            tools:src="@tools:sample/backgrounds/scenic" />-->

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="102dp"
            android:layout_height="104dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="10dp"
            android:src="@drawable/black_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center_horizontal|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Nguyễn Văn A"
                android:textColor="@color/grey_light"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/img_pen"
                android:layout_width="18dp"
                android:layout_height="17dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/pencil_svg" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="1dp"
            android:text="Cài đặt"
            android:textColor="#FF595858"
            android:textSize="20sp" />

         <TextView
            android:id="@+id/tv_account"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="5sp"
            android:background="@drawable/bg_profile_tv"
            android:gravity="center_vertical"
            android:hapticFeedbackEnabled="false"
            android:paddingLeft="10dp"
            android:text="Tài khoản"
            android:textColor="@color/grey_light"
            android:textSize="16sp" />
        <!--            android:background="@drawable/texview_border"-->
        <TextView
            android:id="@+id/tv_email_infor"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="5sp"
            android:background="@drawable/bg_profile_tv"
            android:gravity="center_vertical"
            android:hapticFeedbackEnabled="false"
            android:paddingLeft="10dp"
            android:text="Thông báo"
            android:textColor="@color/grey_light"
            android:textSize="16sp" />
        <!--        android:background="@drawable/texview_border"-->
        <TextView
            android:id="@+id/tv_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="1dp"
            android:text="Hỗ trợ"
            android:textColor="#595858"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_nightMode"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="5sp"
            android:background="@drawable/bg_profile_tv"
            android:gravity="center_vertical"
            android:hapticFeedbackEnabled="false"
            android:paddingLeft="10dp"
            android:text="Chế độ tối"
            android:textColor="@color/grey_light"
            android:textSize="16sp" />
        <!--            android:background="@drawable/texview_border"-->
        <TextView
            android:id="@+id/tv_rules"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="5sp"
            android:background="@drawable/bg_profile_tv"
            android:gravity="center_vertical"
            android:hapticFeedbackEnabled="false"
            android:paddingLeft="10dp"
            android:text="Điều khoản sử dụng"
            android:textColor="@color/grey_light"
            android:textSize="16sp" />
        <!--            android:background="@drawable/texview_border"-->
        <TextView
            android:id="@+id/tv_securityRules"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="5sp"
            android:background="@drawable/bg_profile_tv"
            android:gravity="center_vertical"
            android:hapticFeedbackEnabled="false"
            android:paddingLeft="10dp"
            android:text="Chính sách bảo mật"
            android:textColor="@color/grey_light"
            android:textSize="16sp" />
        <!--            android:background="@drawable/texview_border"-->
        <!--        android:background="@drawable/bg_profile_tv"-->

        <!--            android:background="@drawable/texview_border"-->

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="5sp"
            android:background="@drawable/bg_profile_tv"
            android:gravity="center_vertical"
            android:hapticFeedbackEnabled="false"
            android:paddingLeft="10dp"
            android:text="Email Us"
            android:textColor="@color/grey_light"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_contact2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="1dp"
            android:gravity="center_vertical"
            android:hapticFeedbackEnabled="false"
            android:text="Theo dõi"
            android:textColor="#595858"

            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_fl_fb"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="5sp"
            android:background="@drawable/bg_profile_tv"
            android:gravity="center_vertical"
            android:hapticFeedbackEnabled="false"
            android:paddingLeft="10dp"
            android:text="Theo dõi chúng tôi trên Facebook"
            android:textColor="@color/grey_light"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_fullName_infor"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="5sp"
            android:background="@drawable/bg_profile_tv"
            android:gravity="center_vertical"
            android:hapticFeedbackEnabled="false"
            android:paddingLeft="10dp"
            android:text="Theo dõi chúng tôi trên Instagram"
            android:textColor="@color/grey_light"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginStart="70dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginBottom="5sp"
            android:background="@drawable/btn_logout"
            android:gravity="center_horizontal|center_vertical"
            android:hapticFeedbackEnabled="false"
            android:paddingLeft="10dp"
            android:text="Đăng xuất"
            android:textColor="#000000"
            android:textSize="14sp"
            app:backgroundTint="#ccc" />

        <!--            android:background="@drawable/texview_border"-->
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>